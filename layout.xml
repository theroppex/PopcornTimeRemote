<?xml version="1.0" encoding="utf-8"?>
<layout >
	<row weight="2">
	</row>
	<row>
		<button id="btnBack" icon="BACK" color="purple" onTap="back" />
		<button id="btnUp" icon="UP" color="purple" onTap="up"  />
		<button id="btnFind" icon="SEARCH" color="purple" onTap="find" />
	</row>
	<row>
		<button id="btnLeft" icon="LEFT" color="purple" onTap="left"  />
		<button id="btnSelect" icon="SELECT" color="purple" onTap="select"   />
		<button id="btnRight" icon="RIGHT" color="purple"  onTap="right" />
	</row>
	<row>
		<button id="btnPlay" icon="PLAY" color="purple" onTap="play" />
		<button id="btnDown" icon="DOWN" color="purple" onTap="down" />
		<button id="btnStart" icon="POWER" color="#009600" onTap="start"  />
	</row>
</layout>